<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.product.bj.calendar_gnomeversion.CalendarActivity"
    android:id="@+id/CalendarActivityLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#1279b5"
        android:id="@+id/TopBar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="7"
                android:id="@+id/TopBarMonth"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="70px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2016"
                android:id="@+id/TopBarYear"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="1000px"
        android:id="@+id/CalendarViewPager"
        android:layout_below="@+id/TopBar"
        android:layout_centerHorizontal="true"
        android:background="#1bfd5d5d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:background="#1279B5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/BottomBar" />

</RelativeLayout>
